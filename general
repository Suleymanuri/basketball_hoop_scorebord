import sys
import random
from PyQt5 import QtWidgets
from sort import Ui_MainWindow  # UI sınıfını buraya import ediyoruz

class MyWindow(QtWidgets.QMainWindow):
    def __init__(self):
        super().__init__()
        self.ui = Ui_MainWindow()
        self.ui.setupUi(self)

        # Buton bağlantısı
        self.ui.pushButton_GenerateNumbers.clicked.connect(self.generate_numbers)

        # RadioButton bağlantıları
        self.ui.radioButton_Max.toggled.connect(self.apply_operation)
        self.ui.radioButton_Min.toggled.connect(self.apply_operation)
        self.ui.radioButton_Sort.toggled.connect(self.apply_operation)
        self.ui.radioButton_Reverse.toggled.connect(self.apply_operation)

        # ComboBox bağlantısı (Sıralama tipi değişince de işlemi uygula)
        self.ui.comboBox.currentIndexChanged.connect(self.apply_operation)

    def generate_numbers(self):
        numbers = [random.randint(0, 100) for _ in range(10)]
        self.ui.textEdit_Numbers.setPlainText(" ".join(map(str, numbers)))
        self.ui.textEdit_Result.clear()
        self.ui.label_3.setText("Durum: Sayılar üretildi.")

    def get_numbers(self):
        text = self.ui.textEdit_Numbers.toPlainText()
        try:
            numbers = list(map(int, text.strip().split()))
            return numbers
        except ValueError:
            self.ui.label_3.setText("Durum: Geçersiz sayı formatı.")
            return []

    def apply_operation(self):
        numbers = self.get_numbers()
        if not numbers:
            return

        result = ""

        if self.ui.radioButton_Max.isChecked():
            result = str(max(numbers))
            self.ui.label_3.setText("Durum: Max hesaplandı.")

        elif self.ui.radioButton_Min.isChecked():
            result = str(min(numbers))
            self.ui.label_3.setText("Durum: Min hesaplandı.")

        elif self.ui.radioButton_Sort.isChecked():
            order = self.ui.comboBox.currentText()
            if order == "Ascendic":
                numbers.sort()
            else:
                numbers.sort(reverse=True)
            result = " ".join(map(str, numbers))
            self.ui.label_3.setText(f"Durum: {'Artan' if order == 'Ascendic' else 'Azalan'} sıralandı.")

        elif self.ui.radioButton_Reverse.isChecked():
            numbers.reverse()
            result = " ".join(map(str, numbers))
            self.ui.label_3.setText("Durum: Sıra tersine çevrildi.")

        self.ui.textEdit_Result.setPlainText(result)


if __name__ == "__main__":
    app = QtWidgets.QApplication(sys.argv)
    window = MyWindow()
    window.show()
    sys.exit(app.exec_())








